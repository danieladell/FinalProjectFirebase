<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="org.ieselcaminas.daniel.proyectoclase.data.TeamMember" />
    </data>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/team_textname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.id_team}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars[3]" />

            <TextView
                android:id="@+id/species_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.name}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ability_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{item.ability}" />

                <TextView
                    android:id="@+id/evs_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{item.evs}" />

                <TextView
                    android:id="@+id/item_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{item.item}" />

                <TextView
                    android:id="@+id/moves_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{item.moves.get(0)}" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
</layout>